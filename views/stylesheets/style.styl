//variable
linkcolor = brown + 90%
hovercolor = brown
bgcolor = white - 10%
tablebordersize = 2px

//reset
// global-reset()

//actual code
body
  margin 100px auto
  // background white 20%
  background bgcolor
  color black + 10%
  font 16px "Lucida Grande", helvetica, sans-serif
  width 550px
#header
  padding 50px
  background-color bgcolor - 80%
  height 100px
  color linkcolor
  h1 a
    color brown + 50%
    font-size 30px
    float left
    text-decoration none
    text-transform uppercase
    width 300px
  ul
    float right
    // border-left 1px solid
    padding-left 10px
    margin-top 5px
  li
    // display inline
    text-align left
    margin-right 20px
#wrapper
  text-align left
  a
    color linkcolor
    font-weight bold
  a:hover
    color hovercolor
    font-weight bold
#content
  line-height 24px
  padding 50px
  background-color bgcolor - 10%
  p
    margin-bottom 20px
  a
    text-decoration none
    color hovercolor
#footer
  text-align center
  font-size 10px
  margin-top 50px

//table formating
table
  // border 1px solid brown
th
  border tablebordersize solid brown
tr
  text-align left
  border tablebordersize solid brown
td
  border tablebordersize solid brown

//classes

a.button-link
  padding 10px 15px
  background bgcolor
  color white
  margin-left 20px
